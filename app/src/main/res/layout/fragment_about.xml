<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_all"
    tools:context=".frags.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_to_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <TextView
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="14dp">

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/txt_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1.Introduction to the App:"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_home2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home1"
            android:layout_marginLeft="10dp"
            android:text="Welcome to our House Price Prediction App! This application utilizes advanced machine learning algorithms to estimate the price of residential properties."
            android:textColor="@color/text_c"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rc2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rc1"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="14dp">

        <TextView
            android:id="@+id/txt_home3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="2.Purpose of the App:"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_home4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home3"
            android:layout_marginLeft="10dp"
            android:text="Our app aims to assist homeowners, buyers, and real estate professionals in making informed decisions by providing accurate predictions of property prices based on various factors."
            android:textColor="@color/text_c"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rc3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rc2"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="14dp">

        <TextView
            android:id="@+id/txt_home5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="3.Key Features:"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txt_home6"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home5"
            android:layout_marginLeft="10dp"
            android:text="ðŸ“Œ Predictive Analytics: Utilize our machine learning models to predict house prices."
            android:textColor="@color/text_c"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txt_home7"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home6"
            android:layout_marginLeft="10dp"
            android:text="ðŸ“Œ User-Friendly Interface: Navigate through the app effortlessly with our intuitive design."
            android:textColor="@color/text_c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_home8"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home7"
            android:layout_marginLeft="10dp"
            android:text="ðŸ“Œ User-Friendly Interface: Navigate through the app effortlessly with our intuitive design."
            android:textColor="@color/text_c"
            android:textSize="15sp" />

    </RelativeLayout>


</RelativeLayout>