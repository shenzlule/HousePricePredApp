<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="7dp"
    android:background="@drawable/bg_item"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/results_"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout

            android:id="@+id/tap_on_view"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predicted Price : "
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:id="@+id/pricelabel"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/price_"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/pricelabel"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0"
                android:textSize="13sp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/key_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                />
            <ImageView
                android:id="@+id/key_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                />
            <TextView
                android:id="@+id/date_predicted"
                android:layout_width="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:text="2024-06-02"
                android:textColor="@color/purple_500" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expand_view"
            android:visibility="visible"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By: "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RERA : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p2_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BHK : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p3_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BHK or RK : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p4_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p5_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resale : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p6_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude : "
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p7_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/text_c"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude :"
                android:textStyle="normal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/p8_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>